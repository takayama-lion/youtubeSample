<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hiroyuki.androidyoutubesample.MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.hiroyuki.androidyoutubesample.DisplayAspectRatioFrameLayout
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:aspectRate="4:3"
            >

            <ImageView
                android:onClick="onClick"
                android:src="@mipmap/image01"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.example.hiroyuki.androidyoutubesample.DisplayAspectRatioFrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
